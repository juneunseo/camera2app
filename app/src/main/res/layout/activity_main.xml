<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 미리보기 컨테이너: 화면비 변경 시 이 컨테이너 높이/폭을 조절 -->
    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.camera2app.ui.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- 상단 툴바 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#CC000000">

        <ImageButton
            android:id="@+id/btnIso"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/iso"
            android:src="@drawable/ic_iso"/>

        <ImageButton
            android:id="@+id/btnWb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/white_balance"
            android:src="@drawable/ic_white_balance"/>

        <ImageButton
            android:id="@+id/btnSec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/shutter_speed"
            android:src="@drawable/ic_shutter_speed"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnAspect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/aspect_ratio"
            android:src="@drawable/ic_aspect"/>
    </LinearLayout>

    <!-- 하단 컨트롤 바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="bottom"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#D9000000">

        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/gallery"
            android:src="@drawable/ic_gallery" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnShutter"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/shutter"
            android:src="@drawable/ic_shutter" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnSwitch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/switch_camera"
            android:src="@drawable/ic_switch_camera" />
    </LinearLayout>

</FrameLayout>
