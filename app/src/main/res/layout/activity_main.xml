<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ▼ 프리뷰 컨테이너: TextureView + 그리드 오버레이 -->
    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.camera2app.ui.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"/>
    </FrameLayout>

    <!-- 상단 바: 플래시 + 화면비 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#CC000000"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:elevation="8dp">

        <!-- 플래시 (맨 왼쪽) -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_aspect"
            android:contentDescription="플래시"
            app:tint="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- 가운데 여유 공간 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!--        &lt;!&ndash; 화면비 버튼 (오른쪽) &ndash;&gt;-->
        <!--        <ImageButton-->
        <!--            android:id="@+id/btnAspect"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:background="@android:color/transparent"-->
        <!--            android:contentDescription="Aspect"-->
        <!--            app:srcCompat="@drawable/ic_aspect"-->
        <!--            android:padding="6dp" />-->

        <TextView
            android:id="@+id/btnAspect"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="4:3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="#33000000"
            android:padding="4dp" />

    </LinearLayout>

    <!-- FPS 라벨: 상단바 바로 아래, 왼쪽 -->
    <TextView
        android:id="@+id/fpsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:padding="6dp"
        android:text="0.0 FPS"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:background="#66000000"
        android:elevation="8dp" />

    <!-- 중간 바: Sec / ISO / WB -->
    <LinearLayout
        android:id="@+id/midBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#CC000000"
        android:paddingHorizontal="24dp"
        android:elevation="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Shutter Speed -->
        <ImageButton
            android:id="@+id/btnSec"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Shutter Speed"
            app:srcCompat="@drawable/ic_shutter_speed" />

        <!-- Resolution -->
        <TextView
            android:id="@+id/btnResolution"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="12M"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/rounded_button_bg"
            />



        <!-- White Balance -->
        <ImageButton
            android:id="@+id/btnWb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="White Balance"
            app:srcCompat="@drawable/ic_white_balance" />

        <TextView
            android:id="@+id/btnAutoAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="AUTO"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 하단 바: 갤러리 / 셔터 / 카메라 전환 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#D9000000"
        android:paddingHorizontal="24dp"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Open Gallery"
            app:srcCompat="@drawable/ic_gallery" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnShutter"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            android:contentDescription="Shutter"
            app:srcCompat="@drawable/ic_shutter" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnSwitch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="Switch Camera"
            app:srcCompat="@drawable/ic_switch_camera" />
    </LinearLayout>

    <!-- 셔터 플래시 -->
    <View
        android:id="@+id/shutterFlashView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:alpha="0"
        android:clickable="false" />


</FrameLayout>